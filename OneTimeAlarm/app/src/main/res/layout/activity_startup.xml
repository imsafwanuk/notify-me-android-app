<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.safwan.onetimealarm.StartupActivity">


    <TableLayout
        android:id="@+id/alarm_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TableLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_alarm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="23dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Switch
        android:id="@+id/cb_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/create_alarm_btn"
        android:layout_marginStart="24dp"
        android:text="Switch" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_switch"
        android:layout_alignStart="@+id/cb_switch"
        android:layout_marginStart="63dp"
        android:text="Button" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn"
        android:layout_toEndOf="@+id/btn"
        android:text="btn1" />


</RelativeLayout>
